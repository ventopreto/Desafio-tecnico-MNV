
  <div class="card border border-5 mt-3 mx-auto" style="width: 27rem;">
    <div class="card-body text-justify mx-auto">

      <div class="card-title d-flex align-items-center">
        <h5 class="me-2"><%= "#{t(".name")}: " %></h5>
        <span><%= @user.name %></span>
      </div>

      <div class="card-title d-flex align-items-center">
        <h5 class="me-2"><%= "#{t(".email")}: " %></h5>
        <span><%= @user.email %></span>
      </div>

      <div class="card-title d-flex align-items-center">
        <h5 class="me-2"><%= "#{t(".rentals")}: " %></h5>
        <ul>
          <% @user.rentals.active.each do |rental| %>
            <li><%= link_to rental.title, rental_path(rental) %></li>
          <% end %>
        </ul>
    </div>
  </div>

<div class="inner-flex">
  <%= link_to t("links.edit"), edit_user_path(@user), class: "btn btn-light" %>
  <%= button_to t("links.delete"), @user, method: :delete, class: "btn btn-danger" %>
  <%= link_to t("links.back"), users_path, class: "btn btn-outline-dark" %>
</div>
